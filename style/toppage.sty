%-----------------------
%  表紙用の設定
%-----------------------

\newenvironment{toppage}
{
	\setlength{\baselineskip}{38pt}
	\thispagestyle{empty}
	\begin{center}
}
{
	\end{center}
	\setlength{\baselineskip}{18.5pt}
	\newpage
}

%------------------------------
% #1: 論文タイトル
% #2: 令和◯年度卒業論文等の位置
%------------------------------
\def\title#1#2{
	\vspace{1cm}
	\begin{flushleft}
	  {\large 令和2年度 卒業論文}
	\end{flushleft}
	\vspace{4cm}
	{\huge #1}
	\vspace{#2cm}
}

%------------------------------
% #1: 所属
% #2: 名前
%------------------------------
\def\author#1#2{
  \begin{flushright}
	  {\large #1 \\ #2}
    \vspace{1cm}
  \end{flushright}
}

%------------------------------
% #1: 教員名
%------------------------------
\def\adviser#1{
	\begin{flushright}
	  \vspace{1cm}
		{\large 主指導教員	           \\ #1}
	\end{flushright}
}

\def\date#1#2#3{
	{\LARGE #1年#2月#3日}
}